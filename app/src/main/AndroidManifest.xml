<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="animalize.github.com.quantangshi">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/main_ico"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:alwaysRetainTaskState="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UIPoem.OnePoemActivity"
            android:windowSoftInputMode="stateHidden" />

        <activity android:name=".StudyActivity" />
        <activity
            android:name=".StudyResultActivity"
            android:configChanges="orientation|screenSize"
            android:label="" />

        <activity
            android:name=".TagSearchActivity"
            android:label="标签搜索" />
        <activity
            android:name=".TagManageActivity"
            android:label="标签管理" />

        <activity android:name=".OptionActivity" />
        <activity android:name=".BackupActivity" />

        <activity
            android:name=".TipActivity"
            android:label="使用帮助" />
        <activity
            android:name=".AboutActivity"
            android:label="关于本应用" />
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>